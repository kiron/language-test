<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ngo.kiron.language_assessment.app">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="ngo.kiron.language_assessment.app.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="ngo.kiron.language_assessment.app.QuestionActivity" />
        <activity android:name="ngo.kiron.language_assessment.app.SummaryActivity"></activity>
        <service android:name="ngo.kiron.language_assessment.app.TestTimeCountDownService" />
    </application>

</manifest>